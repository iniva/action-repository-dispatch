{
  "compilerOptions": {
    "lib": [
      "ES2023"
    ],
    "module": "commonjs",
    "target": "es2023",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": ".",
    "typeRoots": [
      "node_modules/@types"
    ],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}