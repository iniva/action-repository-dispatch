{
  "name": "action-repository-dispatch",
  "version": "2.1.0",
  "description": "Send repository_dispatch events with custom payloads",
  "main": "dist/index.js",
  "author": {
    "name": "Tony DBR",
    "email": "tonyblast@gmail.com"
  },
  "license": "MIT",
  "repository": "git@github.com:iniva/action-repository-dispatch.git",
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.build.json && ncc build dist/index.js -o dist",
    "test:typecheck": "tsc --noEmit",
    "test:format": "prettier --check \"src/**/*.ts\"",
    "test:format:fix": "prettier --write \"src/**/*.ts\"",
    "test:lint": "eslint \"src/**/*.ts\" --max-warnings=0",
    "test:lint:fix": "eslint \"src/**/*.ts\" --max-warnings=0 --fix",
    "test:unit": "jest",
    "test:coverage": "jest --coverage",
    "prepare": "husky"
  },
  "dependencies": {
    "@actions/core": "^2.0.1",
    "@actions/github": "^6.0.1",
    "remove": "^0.1.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.18.8",
    "@vercel/ncc": "^0.38.4",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "nock": "^14.0.10",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "roots": [
      "."
    ],
    "modulePaths": [
      "<rootDir>/src/"
    ],
    "testMatch": [
      "**/test/**/*.spec.ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "reporters": [
      [
        "default",
        {
          "summaryThreshold": 1
        }
      ]
    ],
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  }
}
